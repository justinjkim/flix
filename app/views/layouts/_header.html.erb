<header>
  <nav>
    <%= link_to image_tag('logo'), root_path %>
    <ul class="left">
      <li><%= link_to "Released", filtered_movies_path(:released) %></li>
      <li><%= link_to "Upcoming", filtered_movies_path(:upcoming) %></li>
      <li><%= link_to "Recent", filtered_movies_path(:recent) %></li>
      <li><%= link_to "Hits", filtered_movies_path(:hits) %></li>
      <li><%= link_to "Flops", filtered_movies_path(:flops) %></li>
    </ul>
    <ul class="right">
      <% if  current_user %>
        <li>
          <%= link_to current_user.name, current_user %>
        </li>
        <li>
          <%= link_to "Sign Out", session_path, method: :delete, class: "button" %>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign In", signin_path, class: "button" %>
          <%= link_to "Sign up", signup_path, class: "button" %>
        </li>
      <% end %>
  </ul>
  </nav>
</header>
