<!DOCTYPE html>
<html>
  <head>
    <title>Flix App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <%= link_to image_tag('logo'), root_path %>
        <ul>
          <li><%= link_to "All Movies", movies_path %></li>
        </ul>
      </nav>
    </header>
    
    <div class="content">
      <%= yield %>
    </div>

    <footer>
      Copyright by Justin Kim <%= Time.now.year %>
    </footer>
  </body>
</html>
